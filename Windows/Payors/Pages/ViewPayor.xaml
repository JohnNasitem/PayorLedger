<Page x:Class="PayorLedger.Windows.Payors.Pages.ViewPayor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PayorLedger.Windows.Payors.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPayor"
      Unloaded="Page_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button
                x:Name="UI_Back_Btn"
                Content="Back"
                FontSize="15"
                Click="UI_Back_Btn_Click"
                Grid.Column="0"/>
            <TextBlock
                x:Name="UI_PayorName_Tbk"
                TextAlignment="Right"
                FontSize="20"
                Grid.Column="1"/>
        </Grid>

        <TabControl
            Grid.Row="1"
            x:Name="UI_TotalTypes_Tbc"
            HorizontalAlignment="Stretch">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DataGrid
                        ItemsSource="{Binding Content.DefaultView}"
                        Grid.Row="1"
                        IsReadOnly="True"
                        AutoGenerateColumns="True"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="True"
                        CanUserResizeRows="True"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        ColumnWidth="Auto"
                        SelectionUnit="CellOrRowHeader"
                        RowHeaderWidth="0"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Background" Value="WhiteSmoke"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Page>

<Page x:Class="PayorLedger.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PayorLedger.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Payor Ledger">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Menu bar at the top -->
        <Menu
            x:Name="UI_Menu_Mnb"
            Grid.Row="0">
            <!-- File Menu -->
            <MenuItem Header="File">
                <MenuItem Header="Save Ledger" x:Name="UI_SaveLedger_Mni"/>
            </MenuItem>

            <!-- Edit Menu -->
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" x:Name="UI_Undo_Mni"/>
                <MenuItem Header="Redo" x:Name="UI_Redo_Mni"/>
                <Separator/>
                <MenuItem Header="Add Payor" x:Name="UI_AddPayor_Mni"/>
                <MenuItem Header="Add Header" x:Name="UI_AddHeader_Mni"/>
                <MenuItem Header="Add Subheader" x:Name="UI_AddSubheader_Mni"/>
            </MenuItem>
            
            <!-- View Menu -->
            <MenuItem Header="View">
                <MenuItem Header="Payors" x:Name="UI_Payors_Mni"/>
                <MenuItem Header="Columns" x:Name="UI_Columns_Mni"/>
            </MenuItem>
        </Menu>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Text="Year:"
                FontSize="14"
                Margin="0, 0, 5, 0"/>
            <Button
                x:Name="UI_IncreaseYear_Btn"
                Content="▲"
                Grid.Column="1"
                Click="YearEditButton_Click"/>
            <TextBox
                x:Name="UI_SelectYear_Tbx"
                Grid.Column="2"
                LostFocus="UI_SelectYear_Tbx_LostFocus"
                KeyDown="UI_SelectYear_Tbx_KeyDown"/>
            <Button
                x:Name="UI_DecreaseYear_Btn"
                Content="▼"
                Grid.Column="3"
                Click="YearEditButton_Click"/>
            <Button
                x:Name="UI_AddRow_Btn"
                Content="Add Row"
                FontSize="14"
                Grid.Column="5"
                Click="UI_AddRow_Btn_Click"/>
        </Grid>

        <TabControl
            Grid.Row="2"
            x:Name="UI_MonthlyLedgers_Tbc"
            HorizontalAlignment="Stretch">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DataGrid
                        ItemsSource="{Binding Content.DefaultView}"
                        AutoGenerateColumns="True"
                        AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                        CellEditEnding="DataGrid_CellEditEnding"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="True"
                        CanUserResizeRows="True"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        ColumnWidth="Auto"
                        BeginningEdit="DataGrid_BeginningEdit"
                        PreparingCellForEdit="DataGrid_PreparingCellForEdit"
                        SelectionUnit="CellOrRowHeader"
                        RowHeaderWidth="0"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Background" Value="WhiteSmoke"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <StatusBar
            Grid.Row="3"
            x:Name="UI_Status_Stp">
            <StatusBarItem>
                <TextBlock 
                    x:Name="UI_ChangesSavedStatus_Tbk"
                    Text="All Changes Saved" />
            </StatusBarItem>
            <StatusBarItem
                x:Name="UI_CurrentCell_Sbi"
                HorizontalAlignment="Right"
                Visibility="Hidden">
                <TextBlock Text="Row 1, Column 1" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>

<Window x:Class="PayorLedger.Windows.Columns.ColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayorLedger.Windows.Columns"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        Title="Columns" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Text="Columns"
                TextAlignment="Center"
                FontSize="20"/>
            <ListBox
                x:Name="UI_Columns_Lbx"
                Grid.Row="1"
                Margin="10"
                ItemsSource="{Binding Columns}"
                DisplayMemberPath="Name"
                SelectedValuePath="Value"
                SelectedValue="{Binding SelectedColumn, Mode=TwoWay}"
                SelectionChanged="UI_Columns_Lbx_SelectionChanged"/>
        </Grid>
        <Border Grid.Column="1" Background="Gray"/>
        <Grid
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button 
                Grid.Row="0" 
                Name="UI_AddHeader_Btn" 
                Content="Add Header" 
                Width="100" Height="30" Margin="10" 
                Click="UI_AddHeader_Btn_Click"/>
            <Button 
                Grid.Row="1" 
                Name="UI_AddSubheader_Btn" 
                Content="Add Subheader"
                Width="100" Height="30" Margin="10" 
                Click="UI_AddSubheader_Btn_Click"/>
            <Button 
                Grid.Row="2" 
                Name="UI_EditColumn_Btn" 
                Content="Edit" 
                Width="100" Height="30" Margin="10" 
                Click="UI_EditColumn_Btn_Click"/>
            <Button 
                Grid.Row="3" 
                Name="UI_DeleteColumn_Btn" 
                Content="Delete" 
                Width="100" Height="30" Margin="10" 
                Click="UI_DeleteColumn_Btn_Click"
                Background="Red"/>
        </Grid>
    </Grid>
</Window>

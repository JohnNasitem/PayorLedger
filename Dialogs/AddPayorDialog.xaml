<Window x:Class="PayorLedger.Dialogs.AddPayorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayorLedger.Dialogs"
        mc:Ignorable="d"
        FontSize="16"
        WindowStartupLocation="CenterScreen"
        Title="Add A New Payor" Height="180" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label 
            x:Name="UI_WindowPrompt_Lbl"
            Content="Add A New Payor" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            FontSize="24" 
            Grid.ColumnSpan="2"/>
        
        <Label 
            x:Name="UI_PayorName_Lbl"
            Content="Name" 
            Margin="5" 
            Grid.Row="1" 
            Grid.Column="0"/>
        <TextBox 
            x:Name="UI_PayorName_Tbx"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="5" 
            Grid.Row="1"  
            Grid.Column="1"
            TextChanged="UI_PayorName_Tbx_TextChanged"/>

        <Grid
            Grid.Row="2" 
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                x:Name="UI_Status_Lbl"
                Margin="5"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                Foreground="Red"
                Visibility="Hidden"/>
            <Button
                x:Name="UI_AddPayor_Btn"
                Content="Add Payor"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Padding="10"
                Margin="5"
                Grid.Row="3"
                Grid.Column="1"
                IsEnabled="False"
                Click="UI_AddPayor_Btn_Click"/>
        </Grid>
    </Grid>
</Window>

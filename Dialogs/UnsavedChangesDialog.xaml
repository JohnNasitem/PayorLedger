<Window x:Class="PayorLedger.Dialogs.UnsavedChangesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayorLedger.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Payor Ledger" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label 
        x:Name="UI_Title_Lbl"
        Content="Unsaved Changes"
        HorizontalAlignment="Center" 
        VerticalAlignment="Top" 
        FontSize="24"
        Grid.Row="0"/>

        <TextBlock 
            x:Name="UI_Content_Tbk"
            TextWrapping="WrapWithOverflow"
            Text="You have unsaved changes!Do you want to save before exiting?" 
            Margin="5" 
            FontSize="20"
            TextAlignment="Center"
            Grid.Row="1"/>

        <Grid
            Grid.Row="3"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="UI_Save_Btn"
                Content="Save"
                Padding="10"
                Margin="5"
                Grid.Column="0"
                Click="ButtonClick"/>
            <Button
                x:Name="UI_Exit_Btn"
                Content="Dont Save"
                Padding="10"
                Margin="5"
                Grid.Column="1"
                Click="ButtonClick"/>
            <Button
                x:Name="UI_Cancel_Btn"
                Content="Cancel"
                Padding="10"
                Margin="5"
                Grid.Column="2"
                Click="ButtonClick"/>
        </Grid>
    </Grid>
</Window>

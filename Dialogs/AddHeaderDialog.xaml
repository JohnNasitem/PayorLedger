<Window x:Class="PayorLedger.Dialogs.AddHeaderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayorLedger.Dialogs"
        mc:Ignorable="d"
        FontSize="16"
        WindowStartupLocation="CenterScreen"
        Title="Add A New Header" Height="280" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label 
            x:Name="UI_Title_Lbl"
            Content="Add A New Header" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            FontSize="24" 
            Grid.ColumnSpan="2"/>

        <Label 
            x:Name="UI_HeaderName_Lbl"
            Content="Name" 
            Margin="5" 
            Grid.Row="1" 
            Grid.Column="0"
            VerticalAlignment="Center"/>
        <TextBox 
            x:Name="UI_HeaderName_Tbx"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="5" 
            Grid.Row="1"  
            Grid.Column="1"
            TextChanged="UI_HeaderName_Tbx_TextChanged"/>

        <Label 
            x:Name="UI_HeaderOrder_Lbl"
            Content="Order" 
            Margin="5" 
            Grid.Row="2" 
            Grid.Column="0"
            VerticalAlignment="Center"/>
        <ComboBox
            x:Name="UI_HeaderOrder_Cmb"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            />

        <Grid
            Grid.Row="3" 
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock 
                x:Name="UI_Status_Lbl"
                Margin="5"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                Foreground="Red"
                Visibility="Hidden"/>
            <Button
                x:Name="UI_AddHeader_Btn"
                Content="Add Header"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Padding="10"
                Margin="5"
                Grid.Row="3"
                Grid.Column="1"
                IsEnabled="False"
                Click="UI_AddHeader_Btn_Click"/>
        </Grid>
    </Grid>
</Window>
